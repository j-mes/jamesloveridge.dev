{% for year, yearPosts in collections.postsByYear %}
	<h2>{{ year }}</h2>
	<ul>
		{% for post in yearPosts | reverse %}
		<li>
			<a href="{{ post.url | url }}" title="{{ post.data.title }}">
				{{ post.data.title }}
			</a>
			&ndash; {{ post.data.date.toDateString('en-GB') }}
		</li>
		{% endfor %}
	</ul>
{% endfor %}

